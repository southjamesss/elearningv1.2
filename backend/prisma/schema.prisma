generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String
  email    String  @unique
  password String
  role     String  @default("user")  // ✅ ค่าเริ่มต้นเป็น "user"
}

model Course {
  id        String   @id @default(uuid())
  name      String
  content   String
  details   String?  // ✅ ทำให้ `details` เป็น nullable (`?`)
  createdAt DateTime @default(now())
}

model Article {
  id             String   @id @default(uuid())
  title          String
  content        String   @db.Text
  contentDetail  String   @db.Text  // ✅ เอา @default("") ออก
  createdAt      DateTime @default(now())
}

model Exercise {
  id          String     @id @default(uuid())
  title       String
  description String
  questions   Question[]
  createdAt   DateTime   @default(now())
}

model Question {
  id            String @id @default(uuid())
  exerciseId    String
  exercise      Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  questionText  String
  options       String @db.Text // ✅ บันทึกเป็น JSON String
  correctAnswer String
  createdAt     DateTime @default(now())
}

model Video {
  id          String   @id @default(uuid())
  title       String
  url         String   @unique // ✅ เก็บลิงก์ URL ของวิดีโอ
  description String
  createdAt   DateTime @default(now())
}